{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "outDir": "build",
    "sourceMap": true,
    "inlineSources": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "app", "dist", "build", "main"]
}
